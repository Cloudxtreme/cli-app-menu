                 toilet' '*)
                 APP_NAME=$CHOICE_APP
                 f_application_run
                 PRESS_KEY=1 # Display "Press 'Enter' key to continue."
                 ;;
                 [Tt] | [Tt][Oo] | [Tt][Oo][Ii]*)
