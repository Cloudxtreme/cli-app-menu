# +----------------------------------------+
# |        Function f_menu_cat_video       |
# +----------------------------------------+
#
#  Inputs: None.
#    Uses: BVI, MENU_ITEM, MAX
# Outputs: ERROR, MENU_TITLE, DELIMITER.
#
f_menu_cat_video () {
      f_initvars_menu_app "BVI"
      until [ "$BVI" = "0" ]
      do    # Start of Video Application Category until loop.
#f_menu_app_video_editors #BVI Editors - Video editors, transcoders, converters.
#f_menu_app_video_players #BVI Players - Video players/downloaders.
            #
            THIS_FILE="mod_apps-video.lib"
            MENU_TITLE="Video Application Category Menu"
            DELIMITER="#BVI" #BVI This 3rd field prevents awk from printing this line into menu options. 
            #
            f_show_menu "$MENU_TITLE" "$DELIMITER" 
            read BVI
            f_menu_item_process $BVI  # Outputs $MENU_ITEM.
      done  # End of Video Application Category until loop.
            #
      unset BVI MENU_ITEM  # Throw out this variable.
} # End of function f_menu_cat_video#
