# +----------------------------------------+
# |  Function f_menu_scat_sample_template  |
# +----------------------------------------+
#
#  Inputs: None
#    Uses: BXX, MAX
# Outputs: ERROR, MENU_TITLE, DELIMITER, PRESS_KEY
#
# Note: The variable "BXX" is similar to the special comment marker "#BXX".
#       Both must be unique to each (new) menu.
#
f_menu_scat_sample_template () {
      f_initvars_menu_app
      #BXX="" # Initialize variable.
      until [ $BXX -eq 0 ]
      do    # Start of <Sample Template> Application Category until loop.
            #BXX App1 - This is application category #1.
            #BXX App2 - This is application category #2.
            #
            PRESS_KEY=1 # Display "Press 'Enter' key to continue."
            MENU_TITLE="<Sample Template> Application Category Menu"
            DELIMITER="#BXX" #BXX This 3rd field prevents awk from printing this line into menu options. 
            f_show_menu $MENU_TITLE $DELIMITER 
            #
            read BXX
            #
            f_menu_item_process $BXX  # Outputs $MENU_ITEM.
            ERROR=0 # Reset error flag.
            #
            case $MENU_ITEM in # Start of <Sample Template> Application Category case statement.
                 [Aa] | [Aa][Pp] | [Aa][Pp][Pp] | [Aa][Pp][Pp]1)
                 f_menu_cat_name1             # Application Menu.
                 ;;
                 [Aa] | [Aa][Pp] | [Aa][Pp][Pp] | [Aa][Pp][Pp]2)
                 f_menu_cat_name2             # Application Menu.
                 ;;
            esac                 # End of <Sample Template> Application Category case statement.
            #
            # Trap bad menu choices, do not echo Press enter key to continue.
            f_bad_menu_choice $MENU_ITEM
            #
            BXX=$MENU_ITEM  # Outputs $MENU_ITEM.
            #
      done  # End of <Sample Template> Application Category until loop.
            #
      unset BXX MENU_ITEM  # Throw out this variable.
} # End of function f_menu_scat_sample_template
#
# +----------------------------------------+
# |   Function f_menu_app_sample_template  |
# +----------------------------------------+
#
#  Inputs: None. 
#    Uses: MXX, MENU_ITEM, MAX.
# Outputs: ERROR, MENU_TITLE, DELIMITER, PRESS_KEY.
#
f_menu_app_sample_template () {
      f_initvars_menu_app
      until [ $MXX -eq 0 ]
      do    # Start of <Sample Template> Applications until loop.
            #MXX appname  - Description Application1 name.
            #MXX app2name - Description Application2 name.
            #MXX MORE...  - For more <Description Applications>.
            #
            PRESS_KEY=1 # Display "Press 'Enter' key to continue."
            MENU_TITLE="<Sample Template> Applications Menu"
            DELIMITER="#MXX" #MXX This 3rd field prevents awk from printing this line into menu options. 
            f_show_menu $MENU_TITLE $DELIMITER 
            #
            read MXX
            #
            f_menu_item_process $MXX  # Outputs $MENU_ITEM.
            f_application_help
            ERROR=0 # Reset error flag.
            APP_NAME="" # Set application name to null value.
            #
            case $MENU_ITEM in # Start of <Sample Template> Applications case statement.
                 'appname '* | 'sudo appname '* | 'sudo appname')
                 APP_NAME=$MENU_ITEM
                 f_application_run
                 PRESS_KEY=0 # Do not display "Press 'Enter' key to continue."
                 ;;
                 [Aa] | [Aa][Pp] | [Aa][Pp][Pp] | [Aa][Pp][Pp] | [Aa][Pp][Pp][Nn]*)
                 APP_NAME="appname"
                 f_application_run
                 ;;
                 'app2name '*)
                 APP_NAME=$MENU_ITEM
                 f_application_run
                 ;;
                 [Aa] | [Aa][Pp] | [Aa][Pp][Pp] | [Aa][Pp][Pp][2] | [Aa][Pp][Pp][2][Nn]*)
                 APP_NAME="app2name"
                 f_application_run
                 ;;
                 [Mm] | [Mm][Oo] | [Mm][Oo][Rr] | [Mm][Oo][Rr][Ee]*)
                 f_menu_app_more_applications  # Sub-menu.
                 PRESS_KEY=0 # Do not display "Press 'Enter' key to continue."
                 ;;

            esac                # End of <Sample Template> Applications case statement.
            #
            # Trap bad menu choices, do not echo Press enter key to continue.
            f_bad_menu_choice $MENU_ITEM  # Outputs $MENU_ITEM.
            #
            MXX=$MENU_ITEM
            #
            # If application displays information, allow user to read it.
            f_option_press_enter_key
            #
      done  # End of <Sample Template> Applications until loop.
            #
      unset MXX MENU_ITEM  # Throw out this variable.
} # End of function f_menu_app_sample_template
